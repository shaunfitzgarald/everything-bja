rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/admin/allowlist) &&
        (request.auth.token.email.lower() in get(/databases/$(database)/documents/admin/allowlist).data.emails ||
         request.auth.token.email in get(/databases/$(database)/documents/admin/allowlist).data.emails);
    }

    // Public read access for most collections
    match /links/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /videos/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /credits/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /config/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin allowlist - allow ANYONE to read for debugging
    match /admin/allowlist {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Public write access for contact form
    match /contacts/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
