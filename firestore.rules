rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for everything
    match /{document=**} {
      allow read: if true;
    }
    
    // Auth-only write access for admin content
    match /config/{document=**} {
      allow write: if request.auth != null && get(/databases/$(database)/documents/admin/allowlist).data.emails.hasAny([request.auth.token.email]);
    }
    match /links/{document=**} {
      allow write: if request.auth != null && get(/databases/$(database)/documents/admin/allowlist).data.emails.hasAny([request.auth.token.email]);
    }
    match /credits/{document=**} {
      allow write: if request.auth != null && get(/databases/$(database)/documents/admin/allowlist).data.emails.hasAny([request.auth.token.email]);
    }
    
    // Public write access for contact form
    match /contacts/{document=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/admin/allowlist).data.emails.hasAny([request.auth.token.email]);
    }
  }
}
